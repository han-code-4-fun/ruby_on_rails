
<div id="<%= dom_id article %>" class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-body rounded">
      <div class="card-header">
        <%= link_to article.title, article_path(article), class: "link-success" %>
      </div>
      <div class="card-body">
        <p class="card-text"><%= truncate(article.description, length: 100) %></p> 
        <h5 class="card-title font-italic"><%= article.author %></h5>
        by <%= article.user.username %> <br>
        <%= link_to 'del', article_path(article), data: {turbo_confirm: "are you sure?",  turbo_method: :delete}, class: "btn btn-danger" %>
        <%= link_to 'show', article_path(article), class: "btn btn-success" %>
      </div>
      <div class="card-footer">
        <small>Created <%= time_ago_in_words(article.created_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
